<h3>Add a movie to your <%= @list.name %> list</h3>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment, placeholder: 'Enter a comment!' %>
  <%= f.association :movie, collection: Movie.order(:title), prompt: 'Select a movie' %>
  <%= f.submit class: 'btn btn-flat' %>
<% end %>
